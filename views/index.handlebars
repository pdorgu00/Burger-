

<h1 class="mt-4">Da Burger</h1>
<div class="container">
  <div class="row">
    <div class="col-5">
      <ul id='notEatenList'>
        {{#each burgers}}
        {{#unless eaten}}
        <li class="notEaten" data-id="{{id}}">
          {{id}}. {{name}}
        </li>
        <button class="btn btn-light finished" id='devourBtn' data-id="{{id}}">Devour It</button>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-5">
      <ul id='eatenList'>
        {{#each burgers}}
        {{#if eaten}}
        <li class="Ate" data-id="{{id}}">
          {{id}}. {{name}}
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<form class="create-form">

<div class="form-group">
<textarea id="enterhere" name="name"></textarea>
</div>
<button type="submit" id='addburger' class="btn-primary">Add Burger</button>
<p class="mt-4">Enter a burger</p>
</form>